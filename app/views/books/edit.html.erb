<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class = "form_area" >

<h1>Editing book</h1>
<%= form_with model:@book, local:true do |f| %>

<div class = "field">
<h4> <strong>Title</strong> </h4>
  <%= f.text_field :title %>
</div>

<div class ="field">
<h4><strong>Body</strong></h4>
  <%= f.text_area :body %>
  </div>
 <div class = "edit_action" > <%= f.submit 'Update Book' %> </div>
<% end %>
</div>

