<% if @book.errors.any? %>
<p>error</p>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %><td>
    <td><%= link_to "show", book_path(book.id) %><td>
    <td><%= link_to "edit", book_edit_path(book.id) %><td>
    <td><%= link_to "destroy", book_destroy_path(book.id), method: :delete, data: { confirm: '削除しますか？' } %><td>
  </tr>
<% end %>
</table>


<!--フォームエリア開始-->
<div class = "form_area" >
 <h2>New book</h2> 
  <%= form_with model:@book, url:'/books/index', local:true do |f| %>
  <div class = "field"> 
   <div class = "form_title"> <h4>title</h4> </div>
     <%= f.text_field :title %> 
    </div>
    
     <div class = "field"> 
     <div class = "form_body">  <h4>Body</h4> </div>
    <div class = "field"> <%= f.text_area :body %> 
    </div>
     
    <%= f.submit 'Create Book' %>
  <% end %>
</div>
<!--フォームエリア終了-->